<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true" >
    
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Screen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#d51130"
        android:textSize="@dimen/titleSize" />

    <TextView
        android:id="@+id/tvSleepTime"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/settingContentLeftMargin"
        android:layout_marginTop="@dimen/settingContentTopMargin"
        android:gravity="center_vertical"
        android:text="Screen Sleep Time:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/etSleepTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvSleepTime"
        android:layout_alignTop="@+id/tvSleepTime"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvSleepTime"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:text="5" />

    <TextView
        android:id="@+id/tvSleepTimeUnit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/etSleepTime"
        android:layout_alignTop="@id/etSleepTime"
        android:layout_toRightOf="@id/etSleepTime"
        android:gravity="center_vertical"
        android:text="Minutes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvBrightness"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/tvSleepTime"
        android:layout_below="@id/tvSleepTime"
        android:gravity="center_vertical"
        android:text="Screen Brightness: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvBrightnessValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvBrightness"
        android:layout_alignTop="@+id/tvBrightness"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvBrightness"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" >
    </TextView>

    <SeekBar
        android:id="@+id/sbBrightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/textButtonMarginLeft"
        android:layout_marginRight="@dimen/textButtonMarginRight" />

    <TextView
        android:id="@+id/tvBrightnessAdjust"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@id/sbBrightness"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/textButtonMarginLeft"
        android:gravity="center_vertical"
        android:text="Adjust Brightness: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/textButtonMarginBottom"
        android:layout_marginRight="@dimen/textButtonMarginRight"
        android:text="Apply" />

</RelativeLayout>